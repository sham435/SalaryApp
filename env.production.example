# ============================================
# Production Environment Configuration
# PostgreSQL + Redis + RabbitMQ + Celery
# ============================================

# ============================================
# PostgreSQL Database
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=labor_salary_db
DB_USER=salary_admin
DB_PASSWORD=YourSecurePassword123!

# ============================================
# Redis Cache & Celery Backend
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RabbitMQ Message Broker
# ============================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin123
RABBITMQ_MGMT_PORT=15672

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=pyamqp://admin:admin123@rabbitmq:5672//
CELERY_BACKEND_URL=redis://redis:6379/0

# ============================================
# Application
# ============================================
APP_ENV=production
APP_PORT=8000
APP_DEBUG=false
TZ=Asia/Dubai

# ============================================
# PgAdmin (Optional)
# ============================================
PGADMIN_EMAIL=admin@jatan.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# ============================================
# Flower Monitoring (Optional)
# ============================================
FLOWER_PORT=5555

# ============================================
# JatanCRM Integration
# ============================================
CRM_ENABLED=false
CRM_API_BASE=https://crm.jatan.com/api/v1
CRM_API_KEY=your_secure_api_key_here
CRM_SYNC_INTERVAL=10
CRM_TIMEOUT=30

# Sync Options
CRM_SYNC_EMPLOYEES=true
CRM_SYNC_SALARIES=true
CRM_SYNC_REPORTS=false

# ============================================
# Company Information
# ============================================
COMPANY_NAME=Jatan Jewellery FZ.C
COMPANY_LICENSE=41778
